<% if @user.id == current_user.id %>
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <h2><strong>User info</strong></h2>
  <% if @user.errors.any? %>
  <%= @user.errors.count %>件のerrorが発生しました
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
  <%= form_with model:@user, local:true do |f| %>
    <label for="inputName">Name</label><br>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class:"form-control" %><br>
    <label for="inputImage">Image</label><br>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %><br>
    <label for="inputIntroduction">Introduction</label><br>
    <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", class:"form-control" %><br>
    <%= f.submit "Update User", class: "btn btn-secondary" %>
  <% end %>
</div>
<% end %>