<div class="col-md-3">
<h2 class="profile-name">Userinfo</h2>
<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>
<%= link_to edit_user_path(user) do %>
<i class="btn btn-outline-secondary btn-block fas fa-user-cog"></i>
<% end %>
<h2 class="mt-3">New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model: book, local: true do |f| %>
<div class="form-group">
  <label for="book_title">Title</label>
  <%= f.text_field :title, class:"form-control" %>
</div>
<div class="form-group">
  <label for="book_body">Opinion</label>
  <%= f.text_field :body, class:"form-control" %>
</div>
<div class="form-group">
  <br><%= f.submit 'Create Book', class: "btn btn-success" %></br>
</div>
<% end %>
</div>

