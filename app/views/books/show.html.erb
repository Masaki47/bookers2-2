<%= render 'books/list', book: @booknew, user: @user %>
<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table">
    <tbody>
      <tr>
        <td>
          <%= attachment_image_tag @user, :profile_image %>
          <%= image_tag('no_image.jpg') %>
          <br><%= link_to @user.name, user_path(@user.id) %>
        </td>
        <td><%= link_to @book.title, book_path(@book.id) %></td>
        <td><%= @book.body %></td>
        <% if @user.id == current_user.id %>
        <td>
          <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %>
        </td>
        <td>
          <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %>
        </td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>

